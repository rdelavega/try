{% extends 'base.html.twig' %}

{% block body %}

  <div class="container">
    <h1>Create Post!!</h1>

    <div class="row">

      {# {{ form(form) }} #}

      {{ form_start(form) }}
      <div class="input-field col s10">
        <i class="material-icons prefix">account_circle</i>
        {{ form_widget(form.title) }}
        <label for="icon_prefix">Title</label>
      </div>

      <div class="col s2 center">
        {{ form_widget(form.save) }}
      </div>

      {{ form_end(form) }}

    </div>

  {% endblock %}